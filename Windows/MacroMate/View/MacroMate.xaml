<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MacroMate.View.MacroMate">

    <VerticalStackLayout VerticalOptions="FillAndExpand">
        <Label x:Name="lbProfile" Text="Profile" VerticalOptions="Center" HorizontalOptions="Center" />
        <Image x:Name="imgLayout" WidthRequest="500" HeightRequest="200" Margin="0,0,0,15" />
        <ScrollView HeightRequest="350" >
            <VerticalStackLayout Spacing="15" VerticalOptions="FillAndExpand" x:Name="verticalSL">
            </VerticalStackLayout>
        </ScrollView>
        <Button Margin="0,15,0,0" WidthRequest="300" Text="Save" />
    </VerticalStackLayout>
</ContentPage>
