<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MacroMate.View.ChooseImage"
               CanBeDismissedByTappingOutsideOfPopup="True">
    <VerticalStackLayout HeightRequest="500" WidthRequest="400" Padding="20" Spacing="15">
        <Label 
            Text="Choose an Image"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView HeightRequest="300">
            <VerticalStackLayout x:Name="vSL" Padding="10" Spacing="15">

            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Select" />
        <Button x:Name="btnClose" Text="Close" Clicked="btnClose_Clicked" />
    </VerticalStackLayout>
</toolkit:Popup>